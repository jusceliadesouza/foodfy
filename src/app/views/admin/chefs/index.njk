{% extends "../layout.njk" %}

{% block head %}
  <title>Admin | Chefs</title>
  <link rel="stylesheet" href="/styles/admin/chefs.css">
{% endblock %}

{% block content %}
  <section class="sub-menu">
    <h1>Gerenciar chefs</h1>
    <a href="/admin/chefs/create">Novo chef</a>
  </section>

  <section class="card table-container">
    <div class="chef">
      <table width="100%">
        <tbody>
          {% for chef in chefs %}
            <tr>
              <td>
                <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
              </td>

              <td>
                <p id="title">{{chef.name}}</p>
                <a href="/admin/chefs/{{chef.id}}">Visulizar</a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </section>
{% endblock %}