{% extends "layout.njk" %}

{% block head %}
  <title>Buscando por "{{ filter }}"</title>
{% endblock %}

{% block content %}
  <section>
    <h1>Buscando por "{{filter}}"<h1>

    <div class="cards">
      {% for recipe in recipes %}
          <div class="card-modal">
            <div class="card__image">
              <img src={{recipe.image}} alt={{recipe.title}}>
            </div>

            <div class="card__info">
              <p id="title">{{recipe.title}}</p>
              <p id="chef">por {{recipe.chef_name}}</p>
            </div>
          </div>
      {% endfor %}
    </div>
  </section>
  {% endblock %}